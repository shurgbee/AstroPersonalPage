---
import Card from "./Card/index.astro";
import ProjectsCard from "./Project/ProjectsCard.astro"
import { LINKS } from "../lib/constants";
import { getCollection } from "astro:content";

const projects = (await getCollection("project"))
projects.map((project) => console.log(project.data.name))
---

<style>
.hidescroll::-webkit-scrollbar {
  display: none;
}

.hidescroll{
-ms-overflow-style: none;
scrollbar-width: none;
}

</style>

<Card colSpan="md:col-span-2" rowSpan="md:row-span-4">
  <div class="h-full overflow-auto hidescroll">
    <header class="flex items-center">
      <h1 class="text-white text-xl font-bold pb-4">
        Projects
      </h1>
    </header>
    <div class="grid grid-cols-1 gap-3">
      {projects.map((project) => <ProjectsCard name={project.data.name} ></ProjectsCard>)}
    </div>
  </div>
</Card>
